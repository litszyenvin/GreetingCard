<?xml version="1.0" encoding="utf-8"?>
<!-- Placeholder layout shown before Glance content is rendered. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/widget_title"
        android:text="@string/widget_title"
        android:textStyle="bold"
        android:textSize="16sp"
        android:includeFontPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/route_a_title"
        android:text="SAC → ZFD"
        android:textStyle="bold"
        android:textSize="14sp"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/widget_text_a"
        android:text="Loading…"
        android:textSize="13sp"
        android:includeFontPadding="false"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#22000000" />

    <TextView
        android:id="@+id/route_b_title"
        android:text="ZFD → SAC"
        android:textStyle="bold"
        android:textSize="14sp"
        android:includeFontPadding="false"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/widget_text_b"
        android:text="Loading…"
        android:textSize="13sp"
        android:includeFontPadding="false"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/widget_refresh_hint"
        android:text="@string/widget_refresh"
        android:textStyle="bold"
        android:textSize="12sp"
        android:includeFontPadding="false"
        android:gravity="end"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
