<?xml version="1.0" encoding="utf-8"?>
<!-- RemoteViews-safe layout with modern styling -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:orientation="vertical"
    android:background="@drawable/widget_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header with branding -->
    <LinearLayout
        android:id="@+id/widget_header"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/widget_header_bg"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <ImageView
            android:id="@+id/widget_header_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/widget_header_icon_bg"
            android:padding="8dp"
            android:src="@android:drawable/ic_dialog_map"
            android:scaleType="centerInside"
            android:tint="#FFFFFFFF" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/widget_title"
                android:text="@string/widget_title"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#FFFFFFFF"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/widget_subtitle"
                android:text="@string/widget_subtitle"
                android:textSize="12sp"
                android:textColor="#B3FFFFFF"
                android:includeFontPadding="false"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_status"
            android:text="@string/widget_status_live"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="#FFFFFFFF"
            android:includeFontPadding="false"
            android:background="@drawable/widget_badge_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Route A section -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/widget_section_bg"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/route_a_title"
            android:text="SAC → ZFD"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#FF01579B"
            android:includeFontPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/widget_text_a"
            android:text="Loading…"
            android:textSize="13sp"
            android:textColor="#FF37474F"
            android:typeface="monospace"
            android:lineSpacingExtra="2dp"
            android:includeFontPadding="false"
            android:maxLines="50"
            android:ellipsize="end"
            android:gravity="top|start"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Route B section -->
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/widget_section_bg"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/route_b_title"
            android:text="ZFD → SAC"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#FF01579B"
            android:includeFontPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/widget_text_b"
            android:text="Loading…"
            android:textSize="13sp"
            android:textColor="#FF37474F"
            android:typeface="monospace"
            android:lineSpacingExtra="2dp"
            android:includeFontPadding="false"
            android:maxLines="50"
            android:ellipsize="end"
            android:gravity="top|start"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Refresh button -->
    <Button
        android:id="@+id/widget_refresh"
        android:text="@string/widget_refresh"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="#FFFFFFFF"
        android:background="@drawable/widget_button_bg"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
