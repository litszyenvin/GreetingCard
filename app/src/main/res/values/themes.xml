<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- App theme using Material3, no action bar -->
    <style name="Theme.GreetingCard" parent="Theme.Material3.DayNight">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- Optional edge-to-edge defaults -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Referenced by the template widget layout (if present) -->
    <style name="Theme.GreetingCard.AppWidgetContainer" parent="Theme.GreetingCard" />
</resources>
